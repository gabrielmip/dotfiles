general {
    colors = true
    interval = 5
}

order += "battery 0"
order += "memory"
order += "tztime belohorizonte"

battery 0 {
    format = "%status %percentage"
    format_down = "No battery"
    status_chr = "⚡CHR"
    status_full = "☻ FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime belohorizonte {
    format = "%d/%m às %H:%M"
    timezone = "America/Fortaleza"
}

memory {
    format = "MEM: %used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}
